    "clsx": "^2.1.1",
    "daisyui": "^5.0.27",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-storybook": "^0.12.0",
    "eslint-plugin-svelte": "^3.5.1",
    "globals": "^16.0.0",
    "happy-dom": "^17.4.4",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "storybook": "^8.6.12",
    "svelte": "^5.28.1",
    "svelte-check": "^4.1.6",
    "tailwind-merge": "^3.2.0",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
